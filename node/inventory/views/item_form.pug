extends layout

block content
	h1=title
	if errors
		ul
			for e in errors
				li(style='color: red;') #{e.msg}
	form(method='post', style='display: flex; flex-direction: column;')
		input(name='name', placeholder='name', value=item ? item.name : '', required)
		input(name='description', placeholder='description', value=item ? item.description : '', required)
		select(name='category')
			option(value='') --Please select a category--
			for c in categories
				if item
					if item.category==c._id.toString()
						option(value=c._id, selected) #{c.name}
						-continue
				option(value=c._id) #{c.name}
		input(name='price', placeholder='price', value=item ? item.price : '', type='number', step='0.01', required)
		input(name='quantity', placeholder='quantity', value=item ? item.quantity : '', type='number', required)
		input(type='submit')
